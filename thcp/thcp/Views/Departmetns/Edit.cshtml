@model thcp.Models.Department

@{
    ViewData["Title"] = "Editar departamento";
}

<h2>Editar</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartmetId"  />
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label">Departamento RRHH</label>
                <input asp-for="DepartmentName" class="form-control" />
                <label asp-for="DepartmentNumero" class="control-label"> Numero de vacantes en el puesto </label>
                <input asp-for="DepartmentNumero" class="form-control" />
                <label asp-for="DepartmentDetalle" class="control-label">Detalles del puesto </label>
                <input asp-for="DepartmentDetalle" class="form-control" />
                <span asp-validation-for="DepartmentDetalle" class="text-danger"></span>
                <span asp-validation-for="DepartmentNumero" class="text-danger"></span>
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}